{
  "name": "linnun",
  "version": "0.1.0",
  "description": "Electron twitter client",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron main.js",
    "lint": "eslint .",
    "build": "npm run build:linux && npm run build:windows",
    "build:linux": "electron-packager . --overwrite --asar --out=dist --prune --platform=linux --arch=x64 --app-bundle-id=com.pixeldesu.linnun --app-version=$version",
    "build:windows": "electron-packager . --overwrite --out=dist --platform=win32 --arch=ia32 --version-string.ProductName=$npm_package_productName --app-version=0.1.0",
    "build:osx": "electron-packager . --overwrite --asar --out=dist --prune --platform=darwin --arch=x64 --icon=media/Icon.icns --app-bundle-id=com.pixeldesu.linnun --app-version=$version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeldesu/linnun.git"
  },
  "keywords": [
    "twitter",
    "electron",
    "desktop",
    "application"
  ],
  "author": {
    "name": "Andreas Nedbal",
    "email": "andy@pixelde.su",
    "url": "pixelde.su"
  },
  "license": "aGPLv3",
  "bugs": {
    "url": "https://github.com/pixeldesu/linnun/issues"
  },
  "homepage": "https://github.com/pixeldesu/linnun#readme",
  "dependencies": {
    "jquery": "^2.2.3",
    "nconf": "^0.8.4",
    "node-twitter-api": "^1.7.2",
    "twit": "^2.2.4",
    "vue": "^1.0.24"
  },
  "devDependencies": {
    "electron-packager": "7.0.0",
    "electron-prebuilt": "1.0.2",
    "eslint": "2.9.0",
    "eslint-config-vgno": "6.0.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-sass": "^2.3.1",
    "gulp-uglify": "^1.5.3",
    "node-sass": "^3.7.0"
  }
}
